{
  "mcpServers": {
    "hexstrike-ai-local": {
      "command": "python3",
      "args": [
        "/path/to/hexstrike_mcp.py",
        "--server",
        "http://localhost:8888"
      ],
      "description": "HexStrike AI v6.0 - Local Development Server",
      "timeout": 300,
      "alwaysAllow": []
    },
    "hexstrike-ai-cloud": {
      "command": "python3",
      "args": [
        "/path/to/hexstrike_mcp.py",
        "--server",
        "https://hexstrike-ai-v6-0.onrender.com"
      ],
      "description": "HexStrike AI v6.0 - Cloud Deployed (Render)",
      "timeout": 300,
      "alwaysAllow": []
    }
  }
}