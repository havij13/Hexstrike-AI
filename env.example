# HexStrike AI v6.0 Environment Configuration
# Copy this file to .env and customize as needed

# Server Configuration
HEXSTRIKE_PORT=8888
HEXSTRIKE_HOST=0.0.0.0

# Cache Configuration
CACHE_SIZE=1000
CACHE_TTL=3600

# Command Execution
COMMAND_TIMEOUT=300

# Debug Mode (set to true for verbose logging)
DEBUG_MODE=false

# Auth0 Configuration (Required for authentication)
AUTH0_DOMAIN=your-auth0-domain.auth0.com
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret
AUTH0_AUDIENCE=https://hexstrike-ai.com/api
AUTH0_CALLBACK_URL=http://localhost:8888/callback
AUTH0_LOGOUT_URL=http://localhost:8888

# Flask Security
SECRET_KEY=your-secret-key-change-in-production

# Database Configuration
DATABASE_URL=sqlite:///hexstrike.db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Monitoring Configuration
SENTRY_DSN=your-sentry-dsn-here
PROMETHEUS_METRICS_ENABLED=true

